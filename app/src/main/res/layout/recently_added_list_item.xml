<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="180dp"
    android:layout_margin="@dimen/spacing_4"
    >
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivRecentlyHeardArtist"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:src="@drawable/custom_thumb"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/spacing_36"
        />
    <TextView
        android:id="@+id/tvRecentHeardSongName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="125dp"
        android:text="@string/blended_family"
        android:maxLines="1"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/tvRecentAddedArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginTop="150dp"
        android:maxLines="1"
        android:text="Alecia Keys"
        android:textColor="@color/grey_art"
        android:gravity="center_horizontal"

        />

</android.support.v7.widget.CardView>